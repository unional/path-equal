  "description": "Check if the file path are equal",
  "homepage": "https://github.com/unional/path-equal",
  "bugs": {
    "url": "https://github.com/unional/path-equal/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/path-equal.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rimraf lib",
    "coverage": "yarn test --coverage",
    "depcheck": "dependency-check . --unused --no-dev && dependency-check . --missing --no-dev",
    "lint": "eslint --ext js,ts .",
    "test": "jest --maxWorkers=60%",
    "verify": "yarn lint && yarn build && yarn depcheck && jest --coverage",
    "watch": "yarn test --watch"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "devDependencies": {
    "@unional/devpkg-node": "^1.5.0",
    "assertron": "^7.1.3",
    "codacy-coverage": "^3.4.0",
    "commitlint-circle": "^1.0.0"
  }
}
