{
  "name": "path-equal",
  "version": "0.0.0-development",
  "description": "Determine if two the file paths are equal",
  "homepage": "https://github.com/unional/path-equal",
  "bugs": {
    "url": "https://github.com/unional/path-equal/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/path-equal.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "types": "cjs/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts"
  ],
  "scripts": {
    "build": "run-p build:cjs build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:doc": "typedoc",
    "clean": "rimraf cjs esm coverage",
    "coverage": "jest --coverage --maxWorkers=60%",
    "dependency-check": "depcheck",
    "lint": "eslint --ext=ts,js .",
    "nuke": "yarn clean && rimraf node_modules",
    "release": "npx semantic-release",
    "size-limit": "size-limit",
    "test": "jest",
    "verify": "run-p verify:build lint coverage",
    "verify:build": "npm-run-all clean build --parallel dependency-check size-limit",
    "watch": "yarn test --watch"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.16.7",
    "@babel/plugin-proposal-optional-chaining": "^7.16.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-typescript": "^7.16.7",
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^27.4.1",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "babel-jest": "^28.0.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.11.0",
    "eslint-plugin-harmony": "^7.0.1",
    "husky": "^8.0.1",
    "jest": "^28.0.0",
    "jest-progress-tracker": "^3.0.4",
    "jest-watch-repeat": "^2.0.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.0.0",
    "npm-run-all": "^4.1.5",
    "semantic-release": "^19.0.0",
    "size-limit": "^7.0.8",
    "typedoc": "^0.22.13",
    "typedoc-plugin-extras": "^2.2.3",
    "typescript": "^4.6.2"
  },
  "size-limit": [
    {
      "limit": "2 KB"
    }
  ]
}
