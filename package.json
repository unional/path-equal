{
  "name": "path-equal",
  "version": "1.2.2",
  "description": "Determine if two the file paths are equal",
  "homepage": "https://github.com/unional/path-equal",
  "bugs": {
    "url": "https://github.com/unional/path-equal/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/unional/path-equal.git"
  },
  "license": "MIT",
  "author": {
    "name": "Homa Wong (unional)",
    "email": "homawong@gmail.com"
  },
  "sideEffects": false,
  "type": "module",
  "exports": {
    "import": "./esm/index.js",
    "require": "./cjs/index.js"
  },
  "main": "cjs/index.js",
  "types": "esm/index.d.ts",
  "files": [
    "cjs",
    "esm",
    "ts",
    "!ts/**/*.spec.ts"
  ],
  "scripts": {
    "build": "run-p build:cjs build:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:doc": "typedoc",
    "clean": "rimraf cjs coverage esm && mkdir cjs && echo '{\"type\":\"commonjs\"}' > cjs/package.json || true",
    "coverage": "jest --coverage --maxWorkers=60%",
    "cs": "changeset",
    "depcheck": "depcheck",
    "lint": "eslint --ext=ts,js .",
    "nuke": "yarn clean && rimraf node_modules",
    "postinstall": "husky install",
    "prepack": "pinst --disable",
    "postpack": "pinst --enable",
    "size": "size-limit",
    "test": "jest",
    "verify": "npm-run-all clean -p build depcheck lint coverage -p size",
    "watch": "yarn test --watch"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/jest": "^28.0.0",
    "@types/node": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-harmony": "^7.0.2",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-watch-suspend": "^1.1.2",
    "jest-watch-toggle-config": "^2.0.1",
    "jest-watch-typeahead": "^1.1.0",
    "npm-run-all": "^4.1.5",
    "pinst": "^3.0.0",
    "rimraf": "^3.0.2",
    "size-limit": "^7.0.8",
    "ts-jest": "^28.0.3",
    "typedoc": "^0.22.13",
    "typedoc-plugin-extras": "^2.2.3",
    "typescript": "^4.7.2"
  },
  "packageManager": "yarn@3.2.1",
  "size-limit": [
    {
      "path": "./esm/index.js",
      "limit": "2 KB"
    }
  ]
}
