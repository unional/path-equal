{
	"compilerOptions": {
		"composite": true,
		"declarationMap": true,
		"forceConsistentCasingInFileNames": true,
		"isolatedModules": true,
		"lib": [
			"es2015"
		],
		"moduleResolution": "node",
		"newLine": "LF",
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"rootDir": "ts",
		"skipLibCheck": true,
		"strict": true
	},
	"include": [
		"ts",
		"types"
	]
}
